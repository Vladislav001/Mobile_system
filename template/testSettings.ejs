<script>

// Проверка наличия текста
document.getElementById('checkText').onclick = function() {
    if ( this.checked ) {
  $("#textQuestion").css("opacity","1");
    } else {
       $("#textQuestion").css("opacity","0");
    }
};

  if (document.getElementById('checkText').value == "false") {
